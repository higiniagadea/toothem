<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Nueva Prestacion</legend>

<% form_for(@prestacion) do |f| %>
  <%= f.error_messages(:id => 'Error', :header_message=>'', :message=>'Se encontraron los siguientes errores') %>
  <table id="form">
    <tr>
    <td>
      <label>Código</label></td>
    <td><%= f.text_field :codigo %>
    </td>
    </tr>
    <tr>
    <td>
      <label>Descripción</label></td>
    <td><%= f.text_field :descripcion %>
    </td>
    </tr>
    <tr>
    <td>
      <label>Consultorio</label></td>
    <td><%= f.collection_select(:consultorio_id, Consultorio.all, :id, :nombre) %>
    </td>
    </tr>
    <td>
      <label></label>
      <%= f.submit 'Crear',  :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>
    </td>
  </table>
</fieldset>
<% end %>

<%= link_to 'Volver', prestaciones_path %>