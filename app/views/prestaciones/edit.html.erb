<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Prestaci&oacute;n</legend>

<% form_for(@prestacion) do |f| %>
  <%= f.error_messages(:id => 'Error', :header_message=>'', :message=>'Se encontraron los siguientes errores') %>

   <div class="errores">
    <ol style="list-style:none"></ol>
  </div>
  <table style=" text-align: left;"">
    <tr>
    <th>
     C&oacute;digo de prestaci&oacute;n</th>
    <th><%= f.text_field :codigo, :class => 'required ui-widget-content', :size=> 20, :title => 'Codigo no puede estar en blanco', :onkeypress=> 'return validar(event)' %>
    </th>
    </tr>
    <tr>
    <th>
     Descripci&oacute;n</th>
    <th><%= f.text_field :descripcion, :class => 'required ui-widget-content', :size=> 20, :title => 'Descripcion no puede estar en blanco', :onkeypress=> 'return validate(event)'%>
    </th>
    </tr>
    <tr>
      <th>
        Valor por defecto
      </th>
      <td><%= f.text_field :valor, :size=> 20, :class => 'ui-widget-content required' %></td>
    </tr>
  </table>
  <table>
    <tr>
    <td  style=" float: left; margin-left: 300px">
   
      <%= f.submit 'Actualizar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>
       
    </td>
    </tr>
  </table>
  <% end %>
</fieldset>


<script type="text/javascript">
  function validar(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/\d/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
function validate(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/[A-Za-zñÑ\s]/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
  

$(document).ready(function(){
   $(function() {
        $('input:text').keydown(function(e){
        if (e.keyCode == 13) {
            $('form').submit();
        }
      });
     });
    $(".edit_prestacion" ).validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $(".edit_prestacion div.errores"),
       errorLabelContainer: $("ol", $(".edit_prestacion div.errores")),
       wrapper: 'li',
       meta: "validate"
      

    });
  });

  </script>

