<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">

<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <%= stylesheet_link_tag "default" %>
     
        <%= javascript_include_tag :defaults %>
        <%= javascript_include_tag 'qtip.js','jquery.boxy.js'%>
        
        <title>Toothem &copy;</title>
    </head>
    <body>
      <div id="wrapper">
            <div id="container">
                <div id="header">
                       <div id="logo" style="float:left">
                      logo clinica
                       </div>
                  <div id="menutabs" style="float:right;">
                    <%=  render :partial => 'static/tabs' %>
                  </div>

                  <div style="clear:both"></div>
                  
                  </div>

                  <div id="content">

                  <div id="submenu">
                    <%= render :partial => 'static/submenu' %>
                  </div>

                  <div id="main-content">
                      <h1><%= @pagetitle %></h1>

                      <div id="opciones-menu">
                        <%= render :partial => 'static/opciones' %>
                        
                      </div>
                      <div style="clear:both"></div>
                      
                      <div id="title"><%= @title %></div>
                      <%if flash[:notice]%>
                        <div id ="notice"><%=  flash[:notice]%></div>
                      <%end%>
                      <%if flash[:error]%>
                        <div id ="error"><%=  flash[:error]%></div>
                      <%end%>
                    

                    <%= yield %>
                  </div>
                  
                  

                    



                </div>
                <!--<div id="pre-footer">
                    

                </div>
                -->

            </div>

        </div>
        <div id="footer">
            &copy; Toothem
        </div>


    </body>

</html>
