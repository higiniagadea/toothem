<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-corner-all ui-widget-header">Nuevo Per&iacute;odo</legend>
<% form_for(@periodo) do |f|  %>
 <%= f.error_messages(:id => 'error', :header_message => '', :message => 'Ocurrió un error al intentar guardar el registro')  %>


  <div class="errores">
    <ol style="list-style:none"></ol>
  </div>


  <table  style=" text-align: left;">
    <tr>
      <th>Per&iacute;odo</th>
      <td><%= f.date_select(:mes,  :order => [:month, :year], :use_month_names => ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], :start_year => 2009, :title => 'Ingrese un periodo', :size=> 15 , :prompt => {:month => 'Seleccione Mes', :year => 'Seleccione Año'}) %> </td>
    </tr>
  

  </table>

 <table>
        <tr>
          <td style=" float: left; margin-left: 900px">
             <%= link_to 'Volver', buscar_periodos_path %>
            <%= f.submit 'Guardar' , :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>

          </td></tr>
  </table>

  <%end%>
</fieldset>


<script type="text/javascript">  
 $(document).ready(function(){
    $('#periodo_mes_2i').attr('class', 'required'),
    $('#periodo_mes_1i').attr('class', 'required'),
    $('#periodo_mes_2i').attr('title', 'Seleccione un Mes'),
    $('#periodo_mes_1i').attr('title', 'Seleccione un Año'),

    $(".new_periodo").validate({
      
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $(".new_periodo div.errores"),
       errorLabelContainer: $("ol", $(".new_periodo div.errores")),
       wrapper: 'li',
       meta: "validate"
      
     
    });

 });
</script>