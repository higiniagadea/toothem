<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-corner-all ui-widget-header">Per&iacute;odo</legend>
<% form_for(@periodo) do |f|  %>
 <%= f.error_messages(:id => 'error', :header_message => '', :message => 'Ocurrió un error al intentar guardar el registro')  %>


  <div class="errores">
    <ol style="list-style:none"></ol>
  </div>


  <table  style=" text-align: left;">
    <tr>
      <th>Periodo</th>
      <td><%= f.date_select(:mes, :order => [:month, :year], :use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre',
                                                     'Octubre', 'Noviembre', 'Diciembre'], :size=> 15 , :class => 'required',  :prompt => {:month => 'Seleccione', :year => 'Seleccione'} )%> </td>

    </tr>
    

    <tr>
      <th>Fue liquidado?</th>
      <td><%= f.check_box :fue_liquidado, :class=> 'ui-widget-content required'  %> </td>
    </tr>

    <tr>
      <th>Fecha de liquidacion</th>
    <td><span class="fecha_liquidacion" class ="ui-widget-content">
              <input class="ui-widget-content" size="15" type="text" id="fecha_liquid" name="periodo[fecha_liquidacion]" readonly="readonly" />
      </span></td>
    </tr>

  </table>

 <table>
        <tr>
          <td style=" float: left; margin-left: 400px">

            <%= f.submit 'Actualizar' , :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>

          </td></tr>
  </table>

  <%end%>
</fieldset>


<script type="text/javascript">

   $(document).ready(function(){

  $('#periodo_mes_2i').attr('class', 'required'),
  $('#periodo_mes_1i').attr('class', 'required'),
  $('#periodo_mes_2i').attr('title', 'Seleccione un mes'),
  $('#periodo_mes_1i').attr('title', 'Seleccione un año'),

    $(".edit_periodo").validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $(".edit_periodo div.errores"),
       errorLabelContainer: $("ol", $(".edit_periodo div.errores")),
       wrapper: 'li',
       meta: "validate"


    });
$("#fecha_liquid").datepicker({ dateFormat: 'dd-mm-yy',dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'], monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Jutdo','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], buttonImage: '<%= image_path("22/calendar.png")%>',buttonImageOnly: true,showOn:'button', changeYear: true, yearRange: '1960:2110',  maxDate: 0});
   });
</script>
