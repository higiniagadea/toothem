<% unless @periodos.blank? %>
 <fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Per&iacute;odos</legend>

<table style=" text-align: left;" class="listados">
    <tr>
      <th>Per&iacute;odo</th>

      <th>Fue liquidado</th>
      <th>Fecha de liquidaci&oacute;n</th>
      <th>Acciones</th>
    </tr>
    <% @periodos.each do |periodo| %>
    <tr class="<%= cycle('par','impar')-%>">
      <td><%=h periodo.mes.strftime('%Y') %></td>

      <td><%=h boolean_desc(periodo.fue_liquidado) %></td>
      <td><%=h periodo.fecha_liquidacion.blank? ? '-' : periodo.fecha_liquidacion %></td>

       <td>

        <%#= link_to image_tag('pencil.png'), edit_periodo_path(periodo), :title => 'Editar', :id => 'edit' + periodo.id.to_s %>
        <%= link_to image_tag('cancel.png'), periodo, :confirm => 'Esta seguro?', :method => :delete, :title => 'Eliminar'%>

       </td>


         </tr>
   <%end%>

<%else%>
  <span style="color:red">No existen per&iacute;odos liquidados</span>
<%end%>

    </table>
  <table>
    <tr>
        <th style=" float: left; margin-left:  900px">

          <%= submit_tag 'Liquidar',  :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>

        </th>
      </tr>

    </table>
  <%= will_paginate @periodos, :previous_label =>'Anterior', :next_label => 'Siguiente' %>
</fieldset>
