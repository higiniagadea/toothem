<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-corner-all ui-widget-header">Nuevo Pago </legend>
<% form_for (@pago_obra_social) do |f| %>
  <%= f.error_messages(:id => 'Error', :header_message=>'', :message=>'Se encontraron los siguientes errores') %>
    <%= f.hidden_field :obra_social_id, 'value' => @obra_social.id.to_s  %>


   <div class="errores">
    <ol style="list-style:none"></ol>
  </div>

  <table   style=" text-align: left;">

    <tr>
      <th>Nro de recibo</th>
      <td><%= f.text_field :nro_recibo, :class => 'ui-widget-content required', :onkeypress=> 'return validar(event)', :title => 'Ingrese el numero de recibo', :size => 15 %> </td>
    </tr>

    <tr>
       <th>Fecha</th>
         <td>
             <span class="fecha" class="ui-widget-content">
                    <input class="ui-widget-content required "type="text" id="fecha" size="10" name="pago_obra_social[fecha]" readonly="readonly" title="Ingrese una fecha" />
             </span>
         </td>
    </tr>

    <tr>
      <th>Monto</th>
      <td><%= f.text_field :monto, :class => 'ui-widget-content required' , :title => 'Ingrese el monto', :onkeypress=> 'return validar(event)', :size => 15%> </td>
    </tr>

    

   


  </table>

    <table>
         <tr>
            <td style=" float: left; margin-left:  350px">

                  <%= f.submit 'Guardar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>
            </td>
         </tr>
      </table>
</fieldset>
<%end%>


<script type="text/javascript">
  function validar(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/\d/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
   $(document).ready(function(){
         $(function() {
        $('input:text').keydown(function(e){
        if (e.keyCode == 13) {
            $('form').submit();
        }
      });
     });

    $("#new_pago_obra_social").validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $("#new_pago_obra_social div.errores"),
       errorLabelContainer: $("ol", $("#new_pago_obra_social div.errores")),
       wrapper: 'li',
       meta: "validate"



  });



 $("#fecha").datepicker({ dateFormat: 'dd-mm-yy',dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'], monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], buttonImage: '<%= image_path("22/calendar.png")%>',buttonImageOnly: true,showOn:'button', changeYear: true, yearRange: '1960:2110', maxDate :0 });

});
</script>
