<% unless @pacientes.blank?%>
  <table  class="listado">
    <tr>
      <th>Nombre</th>
      <th>D.N.I.</th>
    </tr>
    <%  @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre %></td>
        <td><%= paciente.matricula %></td>
        <td><%#= button_to_remote 'Asignar', :url => asignar_paciente_turnos_path(paciente), :method => :get,
                                                  :success => '$.fancybox.close();'%>
        </td>
      </tr>
    <% end %>
  </table>

<% else %>
  No se encontraron paciente seg&uacute;n el criterio de b&uacute;squeda.
<% end %>
