<fieldset class="ui-widget ui-widget-content ui-corner-all">
  <legend class="ui-widget  ui-corner-all ui-widget-header">Nuevo Evento</legend>

     <%= label_tag 'AGENDA_TURNO', 'Turno'  %>
    <%= radio_button_tag 'AGENDA', 'TURNO',true, :value => 1 %>
    <%= label_tag 'AGENDA_TAREA', 'Tarea'   %>
    <%= radio_button_tag 'AGENDA', 'TAREA',false, :value => 2  %>

  
<% form_for @turno do |f| %>

  <div class="errores">
          <ol style="list-style:none"></ol>
  </div>
  


  
  <table style=" text-align: left;">
    
  <th>
     <div id="turnos">
     Documento <%= text_field_tag :paciente_desc,{}, :class =>"ui-widget-content required", :title => 'Ingrese un documento para realizar la busqueda', :size => 15, :onkeypress=> 'return validar(event)', :readonly => 'readonly', :id => 'dni' %>
        <%= link_to image_tag('magnifier_zoom_in.png'), "javascript:", :rel => buscar_dni_pacientes_path, :id => 'buscar' %>
        <%= f.hidden_field :paciente_id %>
     
     </div>
  </th>

  </table>
  
  <table style=" text-align: left;" >
    <tr>
      <th>Profesional</th>
          <td>
              <%= f.collection_select(:profesional_id, Profesional.all, :id, :nombre, {:include_blank => 'Seleccione'},
                                                                                       :class=> 'ui-widget-content required',
                                                                                       :title=> 'Seleccione un profesional') %>
          </td>
    </tr>

    
    <tr>
       
      <th>Fecha</th>
      <td><%= f.datetime_select :fecha_hora, :order => [:day, :month, :year], :start_year => 2011,  :use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre',
                                                                                              'Octubre', 'Noviembre', 'Diciembre'], :prompt => false %>
        
</td>
       
   </tr>
           <tr>
      <th>Duracion</th>
      <td><select name="turno[duracion]" class ="ui-widget-content required"><%= options_for_select(["30", "45", "60", "90", "120"], @turno.duracion)%>
      </select> minutos</td>
    </tr>
    <tr>
      <th>Observaciones</th>
      <td><%= f.text_area :observaciones, :class =>"ui-widget-content", :cols => 12, :rows => 5 %> </td>
    </tr>
   </table>


   <!--<table style=" text-align: left;">
   <th>
     <div id="tareas">
       Tareas:  <%#= f.text_area :observaciones, :title => 'Ingrese la tarea', :class =>"ui-widget-content", :cols => 12, :rows => 4  %>
     </div>
   </th>
   </table>
-->

   <table>
    <tr><td  style=" float: left; margin-left:  400px"><%= f.submit 'guardar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %></td>
    </tr>
   </table>

<%end%>


