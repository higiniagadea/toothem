<fieldset class="ui-widget ui-widget-content ui-corner-top">
<legend class="ui-widget ui-corner-all ui-widget-header">Odontograma</legend>
<div style="float:right; margin-right: 60px"><%= link_to 'Nuevo Odontograma', new_odontograma_path + '/'+@paciente.id.to_s %></div>

  <%unless @odontogramas.blank?%>

<table  style=" text-align: left; "class="table-list">

 <tr>
   <th>Paciente : <%#= @odontograma.paciente.id.blank? ? '-' : @odontograma.paciente.id.to_s %> </th>
 </tr>

 <tr>
   <th>Fecha de Creacion <%#= @odontograma.fecha_creacion.strftime('%d/%m/%Y') %></th>
 </tr>  

  <tr>
   <th>Fecha ultima Modificacion <%#= @odontograma.fecha_ultima_modificacion.strftime('%d/%m/%Y') %></th>
 </tr>

 <tr>

   <% dientes = [18,17,16,15,14,13,12,11,21,22,23,24,25,26,27,28] %>
   <%  dientes.each do |diente| %>

   <th>

          <div id=""><% diente %>
           <%= hidden_field_tag :odont, 'value' => diente %>
          </div>

          <div id="contenedor">
            <div class="borde superior" id="<%= diente %>_superior" onclick="imprime(this)" ></div>

            <div class="borde inferior" id="<%= diente %>_inferior" onclick="imprime(this)"></div>
            <div class="borde der" id="<%= diente %>_derecho" onclick="imprime(this)"></div>
            <div class="borde izq" id="<%= diente %>_izquierdo" onclick="imprime(this)"></div>
            <div class="contenido" id="<%= diente %>_centro" onclick="imprime(this)"></div>

          </div>

          </th>

          <script type="text/javascript">






  function imprime(){

            var d= window.document.getElementById("odont").value;
		/*var d= window.document.getElementById("d").value;*/
                alert('fdfsdfdsfds');
		open('odontogramas?v='+d,'busa',"toolbar=1,location=0,top=200,left=220,status=0,menubar=0,scrollbars=yes,resizable=yes,width=600,height=350");
         }

               </script>

 <% end %>
  </tr>



  <%else%>
  No posee odontogramas
  <%end%>
  </table>


</fieldset>


