<table class="table-list">
    <tr>
      <th>Nombre</th>
      <th>Tipo documento</th>
      <th>Matricula</th>
      <th>Telefono particular</th>
    </tr>
  <% @pacientes.each do |paciente| %>
     <tr class="<%= cycle('','odd') %>">
      <td><%=h paciente.nombre %></td>
      <td><%=h paciente.tipo_documento.descripcion %></td>
      <td><%=h paciente.matricula %></td>
      <td><%=h paciente.telefono_particular %></td>
      <td><%= link_to image_tag('magnifier_zoom_in.png'), paciente %>
          <%= link_to image_tag('pencil.png'), edit_paciente_path(paciente) %>
          <%= link_to image_tag('cancel.png'), paciente, :confirm => 'Esta seguro que desea eliminar el paciente?', :method => :delete %></td>
      
    </tr>
    <tr>
      
    </tr>
  <% end %>
</table>

<br />
<%= will_paginate @pacientes, :previous_label=>'Anterior', :next_label => 'Siguiente' %>
<%= link_to 'Nuevo paciente', new_paciente_path %>
