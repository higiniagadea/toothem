<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header"><%=h @paciente.nombre %></legend>
  <table>
   <div id="pacientes-screen">
     <div id= "pacientes-photo">
    <% if @paciente.archivo_id.blank? %>
      <%= image_tag('nouser.jpg') %>
    <%else%>
      <%= image_tag @paciente.archivo.public_filename(:thumb) ,:alt => 'imagen del paciente' %>
    <%end%>

       <script type="text/javascript">
          $('#cambio').fancybox(
      {
      'hideOnContentClick': false,
      'titleShow': false

      });
       </script>
     </div>
     
   </div>
  </table>
  
<% form_for(@paciente) do |f| %>
      <%= f.error_messages(:id=>'Error', :header_message => '', :message=>'Se encontraron los siguientes errores') %>
  <div class="errores">
     <ul style="list-style:none"></ul>
     </div>
    
        <table>
          <tr>
          <td style=" float: left; margin-left:  1010px"> <%= link_to image_tag('printer.png'), imprimir_paciente_path, :title => 'Imprimir'%>
          <%= link_to image_tag('cancel.png'), @paciente, :title=> 'Eliminar Paciente', :confirm => 'Esta seguro? No podrá deshacer esta acción', :method => :delete %></td>
        
          </tr>
        </table>
  
        <table style=" text-align: left; "class="tablelist">
         <tr>
          <th>Nombre y Apellido</th>
          <td><%= f.text_field :nombre_apellido, :class=>'ui-widget-content required', :title=> 'Nombre y Apellido no puede estar vacio', :size=> 20, :onkeypress=> 'return validate(event)' %>
          </td>
         <th>Tipo Y Nro.  Documento</th>
          <td> <%= @paciente.tipo_documento.descripcion %> <%= @paciente.nro_documento %>
          </td>
          </tr>

          <tr>
            <th>Domicilio Particular </th>
          <td colspan="3"><%= f.text_field :domicilio_particular, :size=>88, :class=>'ui-widget-content required', :title=> 'Domicilio Particular no puede estar vacio' %>
          </td>
          </tr>

          <tr>
          <th>Domicilio Laboral</th>
          <td colspan="3"><%= f.text_field :domicilio_laboral, :size=>88, :class=> 'ui-widget-content' %>
          </td>
          </tr>

          <tr>
          <th>Sexo</th>
          <td><select name="paciente[sexo]" class="ui-widget-content required">
              <%=  options_for_select(["Masculino", "Femenino"], @paciente.sexo)%>
            </select>
          </td>
          

          
          <th>Estado civil</th>
          <td><select name="paciente[estado_civil]" class="ui-widget-content" >
              <%=  options_for_select([ "Soltero/a", "Casado/a","Divorciado/a","Viudo/a","Otro" ], @paciente.estado_civil)%>
            </select>
          </td>
          </tr>
        

          <tr>
          <th>Fecha de Nacimiento </th>
          <td><span class="fecha_nacimiento" class ="ui-widget-content">
              <input class="ui-widget-content required " title="Fecha de Nacimiento no puede estar en blanco" type="text" id="fecha_nacimiento" name="paciente[fecha_nacimiento]" readonly="readonly" value="<%=  @paciente.fecha_nacimiento.strftime('%d/%m/%Y')%>" />
              </span>
          </td>

          <th>Grupo Sangu&iacute;neo</th>
          <td><select name="paciente[grupo_sanguineo]" class ="ui-widget-content">
          <%= options_for_select(["A+","A-","B+","B-","AB+","AB-","O+","O-"], @paciente.grupo_sanguineo) %>
             </select>
          </td>
          </tr>

          <tr>
          <th>
            Tel&eacute;fono Particular</th>
          <td><%= f.text_field :telefono_particular, :class=> 'ui-widget-content ', :size=> 20, :onkeypress=> 'return validar(event)'  %>
          </td>
            <th>
            Tel&eacute;fono celular</th>
          <td><%= f.text_field :telefono_celular, :class=> 'ui-widget-content', :size=>20, :onkeypress=> 'return validar(event)'  %>
          </td>
                
          </tr>

          <tr>
          <th>Profesi&oacute;n</th>
          <td><%= f.text_field :profesion, :class=> 'ui-widget-content ', :size=>20 , :onkeypress=> 'return validate(event)' %>
          </td>

          </tr>

           <th>Nro de Afiliado</th>
          <td><%= f.text_field :nro_afiliado, :class =>"ui-widget-content", :size=> 20, :onkeypress=> 'return validate(event)' %>
           </td>
           </table>

          <table>
            <tr>

          <td style=" float: left; margin-left:  950px"><%= link_to 'Cancelar', search_pacientes_path  %> <%= f.submit 'Actualizar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>
          </td>
          </tr>
           </table>

       

  <div style="clear:both;"></div>

</fieldset>

 <% end %>

<script type="text/javascript">
  function validar(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/\d/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
function validate(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/[A-Za-zñÑ\s]/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}


  $(document).ready(function(){

    $('#pacientes-photo img').each(function()
   {
      $(this).qtip(
      {
         content: '<a onclick="Boxy.load(\'<%= changephoto_paciente_url(@paciente) %>\',{modal: true})">Editar</a>',
         content: '<a href="<%= changephoto_paciente_url(@paciente) %>" id="imagen">Editar</a>',
         position: 'topLeft', // Set its position
         hide: {
            fixed: true // Make it fixed so it can be hovered over
         },
         style: {
            padding: '5px 15px', // Give it some extra padding
            name: 'blue'// And style it with the preset dark theme

       }
       });
   });
   
     $(function() {
        $('input:text').keydown(function(e){
        if (e.keyCode == 13) {
            $('form').submit();
        }
      });
     });




    $("#edit_paciente_" + <%= @paciente.id.to_s %>).validate({
        //errorLabelContainer: $("#edit_datos div.errores")
       errorContainer: $("#edit_paciente div.errores"),
       errorLabelContainer: $("ol", $("#edit_paciente div.errores")),
       wrapper: 'li',
       meta: "validate",
       required:true
 
       
     });
});
  
 


  $("#fecha_nacimiento").datepicker({ dateFormat: 'dd-mm-yy',dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'], monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], buttonImage: '<%= image_path("22/calendar.png")%>',buttonImageOnly: true,showOn:'button', changeYear: true, yearRange: '1960:2110', maxDate: 0});





  </script>
