<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Historias Clinicas</legend>

<table class="table-list">
  <tr>

<%if @paciente.historia_clinica_general.blank? -%>
    <%=  link_to image_tag('add.png') + 'Historia Clinica General', new_paciente_historia_clinica_general_path(@paciente),:id=>'new_general', :title => 'Nueva Historia Clinica' %>
<%elsif-%>
    <%= link_to image_tag('pencil.png') + 'Historia Clinica General', edit_paciente_historia_clinica_general_path(@paciente, @historia_clinica_general),:id=> 'edit_general' ,:title => 'Ver' %>
<%end-%>
    
</tr>

<br/>

<tr>



<% if @paciente.historia_clinica_ortodoncia.blank? -%>

  <%= link_to image_tag('add.png') + 'Historia Ortodoncica', new_paciente_historia_clinica_ortodoncia_path(@paciente), :title => 'Nueva Historia Clinica', :id=> 'new_ortodoncia' %>

<%elsif -%>
     <%=  link_to image_tag('pencil.png') + 'Historia Ortodoncica', edit_paciente_historia_clinica_ortodoncia_path(@paciente, @historia_clinica_ortodoncia), :title => 'Ver', :id=> 'edit_ortodoncia' %>
 

<%end -%>

</tr>
 </table>
</fieldset>

<script type="text/javascript">
    $('#new_general').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });

    $('#edit_general').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });

    $('#new_ortodoncia').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

      });

    $('#edit_ortodoncia').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });
    </script>