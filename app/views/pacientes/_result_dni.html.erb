<% unless @pacientes.blank?%>
  <table style=" text-align: left;" class="listados">
    <tr>
      <th>Nombre</th>
      <th>D.N.I.</th>
    </tr>
    <%  @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre %></td>
        <td><%= paciente.nro_documento %></td>
        <td><%= button_to_remote 'Asignar', :url => asignar_paciente_path(paciente), :success => "$('.qtip').remove()", :method => :get %> </td>

      </tr>
    <% end %>
  </table>

<% else %>
 <span style="color:red">No se encontraron resultados seg&uacute;n el criterio de b&uacute;usqueda</span>
<% end %>

