
<fieldset class="ui-widget ui-widget-content ui-corner-all">
  <legend class="ui-widget  ui-corner-all ui-widget-header">Nuevo Paciente</legend>

<% form_for(@paciente) do |f| %>
  <%= f.error_messages(:id => 'Error', :header_message=>'', :message=>'Se encontraron los siguientes errores') %>
    <div class="errores">
      <ol style="list-style:none"></ol>
    </div>

  <table style="text-align: left ; "class="table-list">

    <tr>
    <th>
      Nombre y Apellido</th>
    <th><%= f.text_field :nombre, :class => 'required ui-widget-content', :title=> 'Nombre y Apellido no puede estar vacio', :onkeypress=> 'return validate(event)'%>
    </th>
    <th>
      Tipo Y Nro. de Documento</th>
    <th><%= f.collection_select(:tipo_documento_id, TipoDocumento.all, :id, :descripcion, {}, :class => 'ui-widget-content required') %>
      <%= f.text_field :matricula,  :class =>"ui-widget-content required" , :size=> 22 , :title=> 'Ingrese su documento, entre 6 a 10 caracteres', :onkeypress=> 'return validar(event)'%>
    </th>
    </tr>
    
    <tr>
    <th>Domicilio Particular</th>
    <td colspan="3"><%= f.text_field :domicilio_particular, :title=> 'Domicilio Particular no puede estar vacio', :size=>88, :class =>"ui-widget-content required"%>
    </td>
    </tr>
    
      <tr>
    <th>
      Domicilio Laboral</th>
    <td colspan="3"><%= f.text_field :domicilio_laboral, :size=>88, :class =>"ui-widget-content"%>  </td>
    </tr>
    <tr>
    <th>
      Sexo</th>
    <td><select name="paciente[sexo]" class ="ui-widget-content">
        <%=  options_for_select([ "Masculino", "Femenino" ], @paciente.sexo)%>
      </select>
    </td>
    <th>
      Estado Civil</th>
    <td><select name="paciente[estado_civil]" class ="ui-widget-content">
        <%=  options_for_select([ "Soltero/a", "Casado/a","Divorciado/a","Viudo/a","Otro" ], @paciente.estado_civil)%>
      </select>
    </td>
    </tr>

  

    <tr>
    <th>
      Fecha de Nacimiento</th>
    <td><span class="fecha_nacimiento" class ="ui-widget-content">
              <input class="ui-widget-content required" title="Fecha de nacimiento no puede estar vacio" type="text" id="fecha_nacimiento" name="paciente[fecha_nacimiento]" readonly="readonly" />
      </span>
    </td>
    <th>
      Grupo Sangu&iacute;neo</th>
    <td><select name="paciente[grupo_sanguineo]" class ="ui-widget-content">
      <%= options_for_select(["A+","A-","B+","B-","AB+","AB-","O+","O-"], @paciente.grupo_sanguineo) %>
      </select>
    </td>
    </tr>

    <tr>
    <th>
      Tel&eacute;fono</th>
    <td><%= f.text_field :telefono_particular, :class =>"ui-widget-content", :size=> 20, :onkeypress=> 'return validar(event)' %>
    </td>
     <th>
      M&oacute;vil</th>
     <td><%= f.text_field :movil, :class =>"ui-widget-content", :size=> 20, :onkeypress=> 'return validar(event)' %>
    </td>
    <th>
      Tel&eacute;fono Laboral</th>
    <td><%= f.text_field :telefono_laboral, :class =>"ui-widget-content", :size=> 20, :onkeypress=> 'return validar(event)' %>
    </td>
    </tr>

    <tr>
    <th>
      Profesi&oacute;n</th>
    <td><%= f.text_field :profesion, :class =>"ui-widget-content", :size=>20, :onkeypress=> 'return validate(event)' %>
    </td>
    <th>
      Ocupaci&oacute;n</th>
    <td><%= f.text_field :ocupacion, :class =>"ui-widget-content", :size=>20, :onkeypress=> 'return validate(event)' %>
    </td>
    <th>
      Nivel Escolar</th>
    <td><%= f.text_field :nivel_escolar, :class =>"ui-widget-content", :size=> 20, :onkeypress=> 'return validate(event)' %>
    </td>
    </tr>
    <tr>
      <th>Nro. de Afiliado</th>
      <td><%= f.text_field :nro_afiliado, :size=>20, :class=>'ui-widget-content required', :title=> 'Nro. de Afiliado no puede estar vacio', :onkeypress=> 'return validar(event)' %>
      </td>
    </tr>
    <table>
      <tr>
       <td style=" float: left; margin-left: 1000px"><%= link_to 'Cancelar', search_pacientes_path %> <%= f.submit 'Guardar', :onkeypress => 'return ChecaTecla' %>
    </td>

    </tr>
    </table>
 
  </table>
  <div id="error-paciente"></div>

<% end %>


    
</fieldset>

<script type="text/javascript">


 
 function validar(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/\d/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
function validate(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/[A-Za-zñÑ\s]/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}

  $(document).ready(function(){
    $("#new_paciente").validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $("#new_paciente div.errores"),
       errorLabelContainer: $("ol", $("#new_paciente div.errores")),
       wrapper: 'li',
       meta: "validate",
       
       rules: {
         "paciente[matricula]": {required: true, remote:"/pacientes/verificar_matricula?paciente[matricula]=" + $('#paciente[matricula]').val()},
         "paciente[nro_afiliado]": {required: true, remote:"/pacientes/verificar_nroafiliado?paciente[nro_afiliado]=" + $('#paciente[nro_afiliado]').val()},
         "paciente[nro_afiliado]": {required: true, remote:"/pacientes/verificar_numeroafiliado?paciente[nro_afiliado]=" + $('#paciente[nro_afiliado]').val(), number:true},
       "paciente[matricula]": {required: true, remote:"/pacientes/verificar_longitud?paciente[matricula]=" + $('#paciente[matricula]').val(),  rangelength: [6, 10]}
       },
      messages:{
           "paciente[matricula]": {remote:"Nro. de Documento ya se encuentra cargado"},
           "paciente[nro_afiliado]": {remote:"Nro. de Afiliado ya se encuentra cargado"}
           
           
         }



    });
            

    


 
   $("#fecha_nacimiento").datepicker({ dateFormat: 'dd-mm-yy',dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'], monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], buttonImage: '<%= image_path("22/calendar.png")%>',buttonImageOnly: true,showOn:'button', changeYear: true, yearRange: '1960:2110', maxDate: 0});
 });

</script>