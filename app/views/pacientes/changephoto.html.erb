<div>
  <b>Cambiar imagen del paciente <%=  @paciente.nombre %></b><br/><br/>
 
   <% form_for(:archivo, :url => archivos_path,
                        :html => { :multipart => true }) do |f| -%>
  <table>
    <tr>
      <td>
        <label for="archivo">Seleccione archivo:</label>
      </td>
      <td>
        <%= f.file_field :uploaded_data %>
        <%= hidden_field :paciente,:id,"value"=>@paciente.id %>
      </td>
    </tr>
    <tr>
      <td><a  style="font-size: 13px;color:red" class="close">Cancelar</a></td>
      <td><%= submit_tag 'Aceptar' %></td>
    </tr>
      
    </table>
   <% end -%>

 

</div>