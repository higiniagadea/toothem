      'hideOnContentClick': false,
      'titleShow': false

    });
     $('#ficha').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });
    $('#buscar').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });
       $('#tratamiento').fancybox(
        {
      'hideOnContentClick': false,
      'titleShow': false

    });
      </script>