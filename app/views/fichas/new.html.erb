<% form_for(@ficha) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :paciente_id, 'value' => @paciente.id.to_s  %>

<table id="form">
  <tr>

  </tr>
  <tr>
    <td><h1>Nombre y Apellido: <%= @paciente.nombre %></h1></td>
  </tr>
  <tr>
    <td class="label">Telefono: <%= @paciente.telefono_particular %> </td>
  </tr>
  <tr>
    <td class="label">Localidad: </td>
  </tr>
  <tr>
    <td class="label">Domicilio: <%= @paciente.domicilio_particular %> </td>
  </tr>
  <tr>
    <td class="label">Nro. Afiliado. <%= @paciente.nro_afiliado %> </td>
  </tr>

  <% f.fields_for :tratamientos do |trat| %>
  <tr>
    <td class="label">Fecha</td>
  <td>  <%= trat.date_select :fecha, :order => [:day, :month, :year],
                          :use_month_names => ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct','Nov','Dic']%>
  </td>
  </tr>

  <tr>
  <td class="label">Diente</td>
    <td><%= trat.text_field :diente, :size=>10 %>
    </td>
    <td class="label">Cara </td>
    <td><%= trat.text_field :cara, :size=>10 %>
    </td>
  </tr>

  <tr>
    <td class="label">Fecha Finalizacion </td>
    <td><%= trat.date_select  :fecha, :order => [:day, :month, :year],
                          :use_month_names => ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct','Nov','Dic'] %>
    </td>
    <td class="label">Importe Cubierto </td>
    <td><%= trat.text_field :importe_cubierto, :size=>10 %>
    </td>
  </tr>

  <tr>
    <td class="label">Coseguro</td>
    <td><%= trat.text_field :coseguro, :size=>10 %></td>

    <td class="label">Fue Liquidado </td>
    <td><%= trat.check_box :fue_liquidado %>
    </td>
  </tr>

  <tr>
    <td class="label">Fecha de Liquidacion </td>
    <td><%= trat.date_select  :fecha, :order => [:day, :month, :year],
                          :use_month_names => ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct','Nov','Dic'] %>
    </td>
   <td class="label">Estado del tratamiento</td>
   <td><%= trat.collection_select(:estado_tratamiento_id, EstadoTratamiento.all, :id, :nombre) %></td>
  </tr>

  <tr>
  <td class="label">Prestacion </td>
  <td><%= trat.collection_select(:prestacion_id, Prestacion.all, :id, :descripcion) %>
  </td>
  <td class="label">Profesional </td>
  <td><%= trat.collection_select(:profesional_id, Profesional.all, :id, :nombre) %>
  </td>
  </tr>

  <tr>
    <td class="label">Ficha </td>
    <td><%= trat.text_field :ficha_id, :size => 10 %></td>

    <td class="label">Odontograma</td>
    <td><%= trat.text_field :odontograma_id, :size=> 10 %> </td>
  </tr>

  <tr>
    <td>
      <%= f.submit 'Crear Ficha' %>
      <%end%>
    </td>
  </tr>
  </table>
<%end%>