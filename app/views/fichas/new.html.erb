<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Nueva Ficha </legend>
<% form_for(@ficha) do |f| %>
  <%= error_messages_for :ficha %>
  <%= f.hidden_field :paciente_id, 'value' => @paciente.id.to_s %>
  <div class="errores">
      <ol style="list-style:none"></ol>
    </div>
<table style=" text-align: left" >
  <tr>
     <th>Obra Social <%=  @paciente.titular.obra_social.nombre %></th>
  </tr>
  <tr>
    <th><label>Fecha</label></th>
     <th><span class="fecha" class="ui-widget-content">
              <input class="ui-widget-content required "type="text" id="fecha" name="ficha[fecha]" readonly="readonly" size="10" title="Ingrese una fecha" />
      </span></th>


    <th>Profesional </th>
  <th><%= f.collection_select(:profesional_id, Profesional.all, :id, :nombre, :class=> 'ui-widget-content required') %>
  </th>
  </tr>
  <tr>
    <th>Estado</th>
    <th><%= f.collection_select(:estado_id, Estado.all, :id, :nombre, :size=> 14, :class=> 'ui-widget-content required')%> </th>
  </tr>
</table>
 

  
  <table>
    
    <tr>
    <td style=" float: left; margin-left: 500px"><%= f.submit 'Guardar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all' %>
      <%end%>
    </td>
  </tr>
  </table>

  
 
  
  </fieldset>

<script type="text/javascript">
   $(document).ready(function(){
   $("#new_ficha").validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $("#new_ficha div.errores"),
       errorLabelContainer: $("ol", $("#new_ficha div.errores")),
       wrapper: 'li',
       meta: "validate"
     });

   
  $("#fecha").datepicker({ dateFormat: 'dd-mm-yy',dayNamesMin: ['Dom', 'Lun', 'Mar', 'Mie', 'Jue', 'Vie', 'Sab'], monthNames: ['Enero','Febrero','Marzo','Abril','Mayo','Junio','Julio','Agosto','Septiembre','Octubre','Noviembre','Diciembre'], buttonImage: '<%= image_path("22/calendar.png")%>',buttonImageOnly: true,showOn:'button', changeYear: true, yearRange: '1960:2110', maxDate:0});


});
</script>