<h1>Listado de  items</h1>

<table id="table-list">
  <tr>
    <th>Nombre</th>
    <th>Url</th>
    <th>Metodo http</th>
    <th>Orden</th>
    <th>Estatico</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.nombre %></td>
    <td><%=h item.url %></td>
    <td><%=h item.metodo_http %></td>
    <td><%=h item.orden %></td>
    <td><%=h item.estatico %></td>
    <td><%= link_to 'Ver', item %></td>
    <td><%= link_to 'Editar', edit_item_path(item) %></td>
    <td><%= link_to 'Borrar', item, :confirm => 'Are you sure?', :method => :delete unless item.estatico? %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @items, :previous_label=> 'Anterior', :next_label=>'Siguiente'%>
<%= link_to 'Nuevo item', new_item_path %>