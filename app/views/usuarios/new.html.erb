<div id="login-form">
<h1>Nuevo usuario</h1>
<% @usuario.password = @usuario.password_confirmation = nil %>

<%= error_messages_for :usuario %>
<% form_for :usuario, :url => usuarios_path do |f| -%>
<p><%= label_tag 'Nombre de usuario' %><br/>
<%= f.text_field :login , :size => 15  %></p>

<p><%= label_tag 'Email' %><br/>
<%= f.text_field :email,  :size => 15  %></p>

<p><%= label_tag 'Contraseña' %><br/>
<%= f.password_field :password,  :size => 15  %></p>

<p><%= label_tag 'password_confirmation', 'Confirmación' %><br/>
<%= f.password_field :password_confirmation ,  :size => 15 %></p>

<p><%= submit_tag 'Nuevo Usuario!' %></p>
<% end -%>
</div>