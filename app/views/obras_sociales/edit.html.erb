<fieldset class="ui-widget ui-widget-content ui-corner-top">
  <legend class="ui-widget ui-widget-content ui-corner-all ui-widget-header">Obra Social</legend>

<% form_for(@obra_social) do |f| %>
  <%= f.error_messages(:id => 'Error', :header_message=>'', :message=>'Se encontraron los siguientes errores') %>
<div class="errores">
    <ol style="list-style:none"></ol>
  </div>
 <table style=" text-align: left;">
   <tr>
    <th>
    Nombre</th>
    <td><%= f.text_field :nombre, :class=> 'required ui-widget-content', :size =>10, :title=> 'Nombre no puede estar vacio', :onkeypress=> 'return validate(event)' %>
    </td>
   </tr>

   <tr>
     <th>
      Códigos por mes</th>
     <td><%= f.text_field :nro_max_codigos_por_mes, :size =>10, :class=> 'ui-widget-content', :title=> 'Ingrese maximo numero de codigos', :onkeypress=> 'return validar(event)' %>
    </td>
   </tr>
   <tr>
    <th>
      Auditoria previa</th>
    <td><%= f.check_box :auditoria_previa, :class=> 'ui-widget-content' %>
    </td>
   </tr>

   <tr>
    <th>
      Auditoria post</th>
    <td><%= f.check_box :auditoria_post, :class=> 'ui-widget-content' %>
    </td>
   </tr>

   <tr>
    <th>
      Incluye ficha</th>
    <td><%= f.check_box :incluye_ficha, :class=> 'ui-widget-content' %>
    </td>
   </tr>
 </table>
  
  <table>
    <tr>
    <td style=" float: left; margin-left: 200px">
      <%= link_to 'Cancelar', obras_sociales_path %>
      <%= f.submit 'Guardar', :class => 'submit ui-button ui-widget ui-state-default ui-corner-all'  %>
    </td>
    </tr>
  </table>
<% end %>
</fieldset>
<script type="text/javascript">


function validar(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/\d/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}
function validate(e) { // 1
    tecla = (document.all) ? e.keyCode : e.which; // 2
    if (tecla==8) return true; // 3
    patron =/[A-Za-zñÑ\s]/; //4
    te = String.fromCharCode(tecla); // 5
    return patron.test(te); // 6
}

  $(document).ready(function(){
    $(".edit_obra_social").validate({
        //errorLabelContainer: $("#new_paciente div.errores")
       errorContainer: $(".edit_obra_social div.errores"),
       errorLabelContainer: $("ol", $(".edit_obra_social div.errores")),
       wrapper: 'li',
       meta: "validate"

 });

  });

  

  </script>