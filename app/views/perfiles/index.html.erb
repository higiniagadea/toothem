<h1>Listado de perfiles</h1>

<table id="table-list">
  <tr>
    <th>Nombre</th>
    <th>Estatico</th>
  </tr>

<% @perfiles.each do |perfil| %>
  
  <tr>
    <td><%=h perfil.nombre %></td>
    <td><%=h perfil.estatico %></td>

    <td><%= link_to 'Ver', perfil %></td>
    <td><%= link_to 'Editar', edit_perfil_path(perfil) %></td>
    <td><%= link_to 'Borrar', perfil, :confirm => 'Esta seguro?', :method => :delete unless perfil.estatico?  %> </td>
  
  </tr>
  
<% end %>
</table>

<br/>

<%= will_paginate @perfiles, :previous_label=> 'Anterior', :next_label=>'Siguiente'%>
<%= link_to 'Nuevo perfil', new_perfil_path %>


